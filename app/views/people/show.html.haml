%h1= link_to_email(@person.email)
.info
  %fieldset
    = gravatar_for @person
    = label :name, '이름'
    = @person.name
    = label :nick, '닉네임'
    = @person.nick     
    = label :url, '홈페이지'
    = @person.url 
    = label :created, '가입일'
    = @person.created_at.strftime('%Y년 %m월 %d일')
    %p
    = link_to '정보 수정', edit_person_path(@person)

.post
  - unless @person.posts.count.zero?
    %table.posts
      %thead
        %tr
          %th 내용
          %th 날짜
          %th 포럼
          %th 글타래
      %tbody
        - for post in @person.posts
          %tr
            %th.post-head
              =link_to(post.subject,forum_subject_path(post.forum,post.subject))
              .forums=link_to(post.forum, post.forum)
          %tr.post-body
            %td.date= post.updated_at.strftime('%Y-%m-%d 작성')
          %tr.post-body
            %td.body= markdown(post.body)
            
            

/= link_to 'Back', people_path 
